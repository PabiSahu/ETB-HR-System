<!-- login.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= __('eTranBizHRMSPortal') %></title>
	<link rel="stylesheet" type="text/css" href="../css/style.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>
<body>
	<img class="wave" src="img/wave.png">
	<div class="container">
		<div class="img">
			<img src="img/bg.svg" alt="Background Image">
		</div>
		<div class="login-content">
			<form action="/login" method="POST">
				<img src="img/avatar.svg" alt="Avatar Image">
				<h2 class="title"><%=__('Welcome') %></h2>
				<div class="input-div one">
					<div class="i">
						<i class="fas fa-user"></i>
					</div>
					<div class="div">
						<input type="email" class="input" name="EMAIL" id="EMAIL" placeholder="<%=__('EMAIL') %>">
						<% if (typeof emailError !== 'undefined' && emailError !== '') { %>
							<span class="error-message"><%= emailError %></span>
						<% } %>
					</div>
				</div>
				<div class="input-div pass">
					<div class="i">
						<i class="fas fa-lock"></i>
					</div>
					<div class="div">
						<input type="password" class="input" name="PASSWORD" id="PASSWORD" placeholder="<%=__('Password') %>">
						<% if (typeof passwordError !== 'undefined' && passwordError !== '') { %>
							<span class="error-message"><%= passwordError %></span>
						<% } %>
					</div>

				</div>
				<a href="/forgotPassword"><%= __('ForgotPassword?') %></a>
				<a href="/register"><%= __('Register') %></a>
				<input type="submit" style="display: block; width: 100%; height: 50px; border-radius: 25px; outline: none; border: none;
					background-image: linear-gradient(to right, #3F51B5, #3F51B5, #3F51B5); background-size: 200%; font-size: 1.2rem; 
					color: #fff; font-family: 'Poppins', sans-serif; text-transform: uppercase; margin: 1rem 0; cursor: pointer; transition: .5s; background-position: left; color: #fff;"
					value="<%= __('Login') %>" onmouseover="this.style.backgroundPosition = 'right'; this.style.color = '#38d39f';" onmouseout="this.style.backgroundPosition = 'left'; this.style.color = '#fff';">
			</form>			
		</div>
		<div id="languageSelector">
			<form action="/changeLocale" method="post">
				<label for="locale">Select Language:</label>
				<select name="locale" id="locale">
					<option value="en">English</option>
					<option value="hi">Hindi</option>
					<option value="ka">Kannada</option>
				</select>
				<button type="submit" onclick="showLanguageSelector()">Change</button>
			</form>
		</div>
	</div>
	<script type="text/javascript" src="js/main.js"></script>
	<script>
		function showLanguageSelector() {
			// Toggle the visibility of the language selector
			const languageSelector = document.getElementById('languageSelector');
			languageSelector.style.display = (languageSelector.style.display === 'none') ? 'block' : 'none';
		}

		function changeLocalization() {
			// Add your localization change logic here
			console.log("Changing localization...");
		}
	</script>
</body>
</html>
