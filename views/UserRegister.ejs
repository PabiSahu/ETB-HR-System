<!-- UserRegister.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>><%= __('Register') %></title>
  <!-- <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet"> -->
  <!-- <link rel="stylesheet" href="css/userRegister.css"> -->
  <link rel="stylesheet" href="css/style1.css">
  <!-- <link rel="stylesheet" href="css/home.css"> -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/a81368914c.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1"> 
</head>
<body>
  <%- include('layouts/header1');-%>
  <%- include('layouts/naviMenu');-%>
<!-- collapsible submenus -->
<div class="container-fluid">    
    <div class="row">
      <%- include('layouts/sidebar1');-%>
    <div class="col-md-9">
      <div class="container3 mt-4">
        <div class="login-content">
          <form id="userregistrationForm" action="/UserRegister" method="POST">
            <h5  style="font-weight: bold;"> <%= __('RegisterForm') %></h5>
            <% if (usernameError || emailError || passwordError || confirmPasswordError) { %>
                <span class="debug-message" style="display: none;"><%= JSON.stringify({ usernameError, emailError, passwordError, confirmPasswordError }) %></span>
            <% } %>
            <div id="alert-container"></div>
        
            <div class="form-group row">
                <label for="employee_id" class="col-sm-4 col-form-label"><i class="fas fa-id-badge"></i>&nbsp;<%= __('EMPLOYEE_ID') %> :</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="employee_id" id="employee_id" required>
                </div>
            </div>
        
            <div class="form-group row">
                <label for="username" class="col-sm-4 col-form-label"><i class="fas fa-user"></i>&nbsp;<%= __('USERNAME') %> :</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="username" id="username" required>
                    <% if (typeof usernameError !== 'undefined' && usernameError !== '') { %>
                        <span class="error-message"><%= usernameError %></span>
                    <% } %>
                </div>
            </div>
        
            <div class="form-group row">
                <label for="email" class="col-sm-4 col-form-label"><i class="fas fa-envelope"></i>&nbsp;<%= __('EMAIL') %> :</label>
                <div class="col-sm-8">
                    <input type="email" id="email" name="email" class="form-control"  required>
                    <% if (typeof emailError !== 'undefined' && emailError !== '') { %>
                        <div class="error-message"><%= emailError %></div>
                    <% } %>
                </div>
            </div>
        
            <div class="form-group row">
                <label for="password" class="col-sm-4 col-form-label"><i class="fas fa-lock"></i>&nbsp;<%= __('Password') %> :</label>
                <div class="col-sm-8">
                    <input type="password" id="password" name="password" class="form-control"  required>
                </div>
            </div>
        
            <div class="form-group row">
                <label for="confirmPassword" class="col-sm-4 col-form-label"><i class="fas fa-lock"></i>&nbsp;<%= __('Confirm_Password') %> :</label>
                <div class="col-sm-8">
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                </div>
            </div>
        
            <div class="button-container">
                <!-- Register button -->
                <button type="submit" id="regbtn" class="btn"><%= __('Register') %></button>
                <button type="button" id="regbtn" class="btn" onclick="resetForm()"><%= __('Reset') %></button>
            </div>
        </form>
        </div>
      </div> 
    </div>
  </div>        
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="path_to_naviMenu.ejs"></script>
  <script>
    function resetForm() {
      // Reset the form by accessing form elements and resetting their values
      document.getElementById("userregistrationForm").reset();

      // Clear the error message
      document.getElementById("alert-container").innerHTML = '';
    }
  </script>
  <%- include('layouts/script');-%>
</body>
</html>
