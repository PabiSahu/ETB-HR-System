<!DOCTYPE html>
<html lang="en">
 
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= __('Lookup_Tables') %></title>
  <!-- CSS styles -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style1.css">
  <!-- <link rel="stylesheet" href="css/home.css"> -->
  <!-- <link rel="stylesheet" href="css/lookup.css"> -->
</head> 
<body>
  <%- include('layouts/header1');-%>
  <%- include('layouts/naviMenu');-%>
  <!-- collapsible submenus -->
  <div class="container-fluid">
    <div class="col-md-12">
      <div class="row">
        <%- include('layouts/sidebar');-%>
        <div class="col-md-9 mt-4">
          <div class="container-fluid mt-3">
            <form action="/submitForm" method="POST">
              <div class="form-group row ">
                <label class="col-sm-2 col-form-label" for="masterDetail"><%= __('Master_Detail') %> :</label>
                <div class="col-sm-4 mb-2 ">
                  <input type="text" class="form-control" id="masterValue" name="masterValue"
                    value="<%= masterValue %>" required>
                </div>
                <label class="col-sm-2 col-form-label" for="descriptions"><%= __('descriptions') %> : </label>
                <div class="col-sm-4 mb-2">
                  <input type="text" class="form-control" id="descriptions" name="descriptions"
                    value="<%= descriptions %>" required>
                </div>
                <label class="col-sm-2 col-form-label" for="status"><%= __('status') %> : </label>
                <div class="col-sm-4 mb-2">
                  <input type="text" class="form-control" id="status" name="status" value="<%= status %>" required>
                </div>
              </div>
              <% if (masterValue) { %>
                <button type="button" id="addButton" class="btn btn-success" ><%= __('Add') %></button>
                <button type="button" id="cancelButton" class="btn btn-danger"><%= __('Cancel') %></button>
                <button type="button" id="editButton" class="btn btn-primary"><%= __('Edit') %></button>
                <button type="button" id="saveButton" class="btn btn-success" style="display: none;"><%= __('Save') %></button>
                <button type="button" id="deleteButton" class="btn btn-danger"><%= __('Delete') %></button>
              <% } else { %>
                <!-- Add a different button when there is no masterValue -->
                <button type="submit" id="submitButton" class="btn btn-primary"><%= __('Submit') %></button>
                <button type="button" id="cancelButton" class="btn btn-danger"><%= __('Cancel') %></button>
              <% } %>
            </form>
 
 
          </div>
          <div class="card mt-3 ml-3 mr-3">
            <div class="card-body" style="background-color:#ddd">
              <h4><%= __('Child_Lookup_Table') %></h4>
            </div>
          </div>
 
          <div class="col-md-12">
            <div class="card mt-3 mb-3 ml-2">
              <div class="card-body">
                <table id="child-table" class="table table-bordered mt-2 ">
                  <!-- Button to add a new row -->
                  <button class="btn btn-primary" id="add-row-btn"><i class="fas fa-plus"></i><%= __('New') %> </button>
                  <!-- Button to delete selected rows -->
                  <button class="btn btn-danger" id="delete-selected-rows-btn"><i class="fas fa-trash"></i><%= __('Delete Selected') %> </button>
                  <thead>
                    <tr>
                      <!-- Checkbox for selecting multiple rows -->
                      <th><input type="checkbox" id="select-all-checkbox"></th>
                      <th><%= __('Id') %></th>
                      <th><%= __('Master_Data') %></th>
                      <th><%= __('Values') %></th>
                      <th><%= __('Edit_Row') %></th>
                      <th><%= __('Action') %></th> <!-- Column for delete button -->
                    </tr>
                  </thead>
                  <tbody>
                    <!-- Child table rows will be dynamically populated here -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
  <%- include('layouts/script');-%>
  <%- include('layouts/childlookupScript');-%>
</body>
</html>