<!-- register.ejs -->
 
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= __('Register') %></title>
  <link rel="stylesheet" type="text/css" href="../css/style.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/a81368914c.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <img class="wave" src="img/wave.png">
  <div class="container">
    <div class="img">
      <img src="img/bg.svg">
    </div>
    <div class="login-content">
      <form id="registrationForm" action="/register" method="POST">
        <% if (usernameError || emailError || passwordError || confirmPasswordError) { %>
          <span class="debug-message" style="display: none;"><%= JSON.stringify({ usernameError, emailError, passwordError, confirmPasswordError }) %></span>
      <% } %>
        <img src="img/avatar.svg">
        <h5 class="title"><%= __('Register') %></h5>
        <div id="alert-container">
        </div>
        <div class="input-div">
          <div class="i">
            <i class="fas fa-id-badge"></i>
          </div>
          <div class="div">
            <input type="text" class="input" name="employee_id" id="employee_id" placeholder="<%= __('Employee ID') %> ">
          </div>
        </div>
        <div class="input-div">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <input type="text" class="input" name="username" id="username" placeholder="<%= __('User Name') %>">
            <% if (typeof usernameError !== 'undefined' && usernameError !== '') { %>
              <span class="error-message"><%= usernameError %></span>
            <% } %>
          </div>
        </div>
        <div class="input-div">
          <div class="i">
            <i class="fas fa-envelope"></i>
          </div>
          <div class="div">
            <input type="email" id="email" name="email" class="input" placeholder="<%= __('EMAIL') %>">
            <% if (typeof emailError !== 'undefined' && emailError !== '') { %>
              <span class="error-message"><%= emailError %></span>
            <% } %>
          </div>
        </div>
        <div class="input-div">
          <div class="i">
            <i class="fas fa-lock"></i>
          </div>
          <div class="div">
            <input type="password" id="password" name="password" class="input" placeholder="<%= __('Password') %>">
            <% if (typeof passwordError !== 'undefined' && passwordError !== '') { %>
              <span class="error-message"><%= passwordError %></span>
            <% } %>
          </div>
        </div>
        <div class="input-div">
          <div class="i">
            <i class="fas fa-lock"></i>
          </div>
          <div class="div">
            <input type="password" id="confirmPassword" name="confirmPassword" class="input" placeholder="<%= __('Confirm_Password') %>">
            
          </div>
        </div>
        <a href="/"><%= __('haveAccount') %></a>
       
        <div class="button-container">
          <!-- Register button -->
          <button type="submit" class="botn"><%= __('Register') %></button>
          <button type="button" class="botn" onclick="resetForm()"><%= __('Reset') %></button>
        </div>
       
      </form>
    </div>
  </div>
  <script>
    function resetForm() {
      // Reset the form by accessing form elements and resetting their values
      document.getElementById("registrationForm").reset();
 
      // Clear the error message
      document.getElementById("alert-container").innerHTML = '';
    }
  </script>
</body>
</html>